@model Product
<table>
    <tr>
        <td style="width:40%;">
            <div>
                <img style="height: 70%; width: 70%; object-fit: cover;" src="~/images/@Model.Picture" alt="Product Image">
            </div>
        </td>

        <td>
            <div>
                <h3>@Model.Brand  @Model.Name</h3>
                <h4>@Model.Gender</h4>
                <h4>@Model.Type</h4>
                <h4>@Model.Color</h4>
                @Model.Description
                <h4>@Model.Price.ToString("c")</h4>
            </div>
        </td>
        <td>
            <form id="@Model.ProductId" asp-action="AddToCart"
                  asp-controller="Cart" method="post" class="float-right m-2 p-1">
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" name="returnUrl"
                       value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <button type="submit" class="btn btn-info btn-sm float-right">
                    Add To Cart
                </button>
            </form>
        </td>
    </tr>
</table>
